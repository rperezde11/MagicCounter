<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0f0f">

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:id="@+id/layout_menu"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:animateLayoutChanges="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:animateLayoutChanges="true"
                android:id="@+id/layout_menu_inside"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/dice"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_menu_dice"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/configuration"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_menu_conf"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/int0"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_menu_question2"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/int1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:minWidth="40dp"
                    android:maxWidth="45dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_menu_question"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/quit"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ico_menu_quit"
                    android:background="#00000000"/>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="90px"
            android:layout_height="90px"
            android:id="@+id/button_menu"
            android:src="@drawable/ico_menu"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>
